<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("Restaurant", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("Menu", "/menu") %>
        </li>
        <li>
          <%= link_to("口コミ", "/posts/index") %>
        </li>
      <% if session[:user_id] %>
        <li>
          <%= link_to("新規投稿", "/posts/new") %>
        </li>
        <li>
          <%= link_to("ログアウト", "/logout", method: :delete) %>
        </li>
        <% else %>
        <li>
          <%= link_to("新規登録", "/signup") %>
        </li>
        <li>
          <%= link_to("ログイン", "/login") %>
        </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
